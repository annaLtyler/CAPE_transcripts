Bootstrap: docker
From: bioconductor/bioconductor_docker:devel
Stage: spython-base

%labels
maintainer="atyler"
%post
export DEBIAN_FRONTEND=noninteractive; apt-get -y update \
&& apt-get install -y libglpk-dev \
libgmp-dev \
libxml2-dev
install2.r --error \
bitops \
bnstruct \
cluster \
corpcor \
gprofiler2 \
igraph \
Matrix \
pheatmap \
qtl2 \
RGCCA
# Docker inheritance

apt-get update
RUN R -e 'BiocManager::install(ask = F)' && R -e 'BiocManager::install(c("AnnotationDbi", \
"Biobase", "BiocGenerics", "GOSemSim", "IRanges", "org.Mm.eg.db", "S4Vectors", ask = F))'

cd /payload/
%runscript
exec /bin/bash R "$@"
