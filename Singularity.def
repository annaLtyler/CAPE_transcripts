Bootstrap: docker
From: bioconductor/bioconductor_docker:devel
Stage: spython-base

%labels
maintainer="atyler"
%post
export DEBIAN_FRONTEND=noninteractive; apt-get -y update \
&& apt-get install -y libglpk-dev \
libgmp-dev \
libxml2-dev \
libcurl4-openssl-dev
install2.r --error \
bitops \
bnstruct \
cluster \
corpcor \
gprofiler2 \
igraph \
Matrix \
pheatmap \
qtl2 \
RGCCA

# Docker inheritance


R -e 'BiocManager::install(c("AnnotationDbi", "Biobase", "BiocGenerics", "GOSemSim", "IRanges", "org.Mm.eg.db", "S4Vectors", ask = F))'

%startscript
exec /bin/bash R "$@"
